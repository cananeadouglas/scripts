comando 'read'
# read NOME
Escreve:
> Douglas Cananéa
# echo $NOME
Mostra:
# Douglas Cananéa

com perguntas
# read -p "Informe o seu curso: " CURSO
> Sistema de Informação
# echo $CURSO
mostra:
# Sistema de Informação

com código
# read -s CODIGO
> 133
# echo $CODIGO
mostra:
# 133

